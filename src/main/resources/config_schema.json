{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Me2e Test Configuration",
  "description": "Test Configuration for the Me2e Library",
  "type": "object",
  "properties": {
    "containers": {
      "$id": "#/properties/containers",
      "type": "object",
      "description": "Map of container names and containers to start",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/container"
        }
      },
      "additionalProperties": false
    },
    "mock-servers": {
      "$id": "#/properties/mock-servers",
      "type": "object",
      "description": "HTTP web servers mocking third party services",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/mock-server"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "containers"
  ],
  "definitions": {
    "container": {
      "$id": "#/definitions/container",
      "type": "object",
      "description": "Definition of a Docker container to be started",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "MICROSERVICE",
            "DATABASE",
            "MISC"
          ]
        },
        "image": {
          "type": "string",
          "description": "Docker image for this container"
        },
        "environment": {
          "$ref": "#/definitions/list_or_dict"
        }
      },
      "required": [
        "type",
        "image"
      ]
    },
    "mock-server": {
      "$id": "#/definitions/mock-server",
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "description": "Port where this mocked web server is exposed",
          "default": 9000
        },
        "stubs": {
          "type": "array",
          "description": "List of paths to stub definitions. The files need to be located in `resources` folder.",
          "items": {
            "type": "string",
            "pattern": "^([^\\r\\n\\t\\f\\v\\?\\\\*\\\\|\\<\\>\\/]+\\/?)*stub\\.(yaml|json)$"
          }
        }
      }
    },
    "list_or_dict": {
      "oneOf": [
        {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": [
                "string",
                "number",
                "null"
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      ]
    }
  }
}
